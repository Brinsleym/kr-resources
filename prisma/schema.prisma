generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model DailyData {
  id        String   @id @default(cuid())
  date      String   @unique // YYYY-MM-DD format
  completed String[]
  userId    String   // To support multiple users in the future
}

model Lesson {
  id     String   @id @default(cuid())
  date   DateTime
  userId String   // To support multiple users in the future
}